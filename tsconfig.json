{
  "compilerOptions": {
    "target": "esnext",
    "baseUrl": ".",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "strict": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  }
}
